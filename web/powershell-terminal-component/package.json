{
  "name": "powershell-terminal-component",
  "version": "0.1.0",
  "description": "Web component wrapping xterm.js with ironposh-web for PowerShell remoting",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:wasm": "cd ../../crates/ironposh-web && wasm-pack build --target web",
    "build:types": "tsc --emitDeclarationOnly",
    "build:component": "vite build",
    "build": "npm run build:wasm && npm run build:component",
    "dev": "vite",
    "preview": "vite preview"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "ironposh-web": "file:../../crates/ironposh-web/pkg",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-wasm": "^3.5.0"
  },
  "devDependencies": {
    "typescript": "^5.5.0",
    "vite": "^5.4.0"
  }
}
